<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordECGActivity">

    <ImageView
        android:id="@+id/ECGSignal"
        android:layout_width="374dp"
        android:layout_height="171dp"
        android:layout_marginTop="208dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ecg_signal" />

    <Button
        android:id="@+id/uploadEGCSignal"
        style="@style/StrokeButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Upload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ECGSignal"
        app:layout_constraintVertical_bias="0.072" />

    <Button
        android:id="@+id/analyzeECGSignal"
        style="@style/StrokeButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Analyze"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintStart_toEndOf="@+id/uploadEGCSignal"
        app:layout_constraintTop_toBottomOf="@+id/ECGSignal"
        app:layout_constraintVertical_bias="0.072" />

    <Button
        android:id="@+id/shareECGSignal"
        style="@style/StrokeButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.756"
        app:layout_constraintStart_toEndOf="@+id/analyzeECGSignal"
        app:layout_constraintTop_toBottomOf="@+id/ECGSignal"
        app:layout_constraintVertical_bias="0.072" />

    <ImageButton
        android:id="@+id/imgBackButton"
        android:layout_width="54dp"
        android:layout_height="46dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_back"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>